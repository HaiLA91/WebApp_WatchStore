@{
    Layout = "_Layout";
}
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul class="hai">
                        <li data-filter="*">All</li>
                        @foreach(Brand item in ViewBag.Brands)
                        {
                          <li data-filter=".@(item.BrandName)">@item.BrandName</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach(KeyValuePair<string, List<Product>> pair in ViewBag.productAndBrands)
            {
                @foreach (Product item in pair.Value)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mix @(pair.Key)">
                        <div class="featured__item">
                            <div class="featured__item__pic set-bg" data-setbg="/img/@item.ImageUrl">
                                <ul class="featured__item__pic__hover">
                                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                    <li>                    
                                        <form method="post" action="/cart/add">
					                        <input type="hidden" value="@item.ProductId" name="productId" />
					                        <input type="hidden" value="1" name = "quantity" />
					                        <button class="btn btn-danger my-cart-btn my-cart-b ">Add to Cart</button>
				                        </form>
                                    </li>
                                </ul>
                            </div>
                            <div class="featured__item__text">
                                <h6><a data-toggle="modal" data-target="#myModal" href="#">@item.ProductName</a></h6>
                                <h5>@item.UnitPrice</h5>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
<!-- Featured Section End -->

